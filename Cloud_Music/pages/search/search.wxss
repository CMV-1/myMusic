.hidden {
  display: none;
}

.searchContainer {
  height: 100%;
  overflow-y: scroll;
  margin-bottom: 130rpx;
}

.header {
  position: relative;
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 20rpx 20rpx;
  background-color: #d43c33;
}

.header .icon-huitui {
  height: 50rpx;
  width: 50rpx;
  line-height: 50rpx;
  font-size: 50rpx;
  margin-right: 15rpx;
}

.header .searchIcon {
  position: absolute;
  left: 100rpx;
  top: 22rpx;
  font-size: 34rpx;
  line-height: 60rpx;
  color: #fff;
}

.header input {
  height: 60rpx;
  flex: 1;
  background-color: rgba(213, 213, 213, 0.5);
  border-radius: 20rpx;
  padding-left: 60rpx;
  color: #fff;
}

.header .clear {
  position: absolute;
  right: 50rpx;
  z-index: 10;
  top: 20rpx;
  font-size: 30rpx;
}

.placeholder {
  opacity: 0.5;
  color: #fff;
  font-size: 26rpx;
  text-align: left;
}

/* 模糊搜索展示 */
.searchContent {
  color: #d43c33;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  border-bottom: 1rpx solid #d43c33;
  padding: 0 20rpx;
}

.searchList {
  padding: 0 20rpx;
}

.searchItem {
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}

.searchItem .content{
  flex: 1;
  margin-left: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  border-bottom: 1rpx solid #eee;
}

/* 推荐搜索区域 */
.recommendSearchContainer {
  padding: 0 20rpx;
}

.recommendSearchContainer .title {
  line-height: 80rpx;
  height: 80rpx;
  font-size: 30rpx;
}
.recommendSearchList {
  display: flex;
  flex-wrap: wrap;
}
.recommendSearchItem {
  font-size: 26rpx;
  margin: 0 20rpx 10rpx 0;
  padding: 0 18rpx;
  height: 50rpx;
  line-height: 50rpx;
  align-items: center;
  border-radius: 25rpx;
  background-color: rgba(213, 213, 213, 0.5);  
}

/* 热搜榜 */
.hotContainer {
  padding: 0 20rpx;
}

.hotContainer .title {
  font-size: 30rpx;
  color: black;
  font-weight: 700;
  height: 88rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #333;
}

.hotList {
  display: flex;
  flex-wrap: wrap;
}

.hotItem {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}

.hotItem .order {
  margin: 0 10rpx;
}

.hotItem .iconImg {
  width: 35rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

/* 搜索历史 */
.history {
  position: relative;
  line-height: 50rpx;
  margin-top: 20rpx;
}

.history .title {
  height: 50rpx;
  font-size: 30rpx;
  padding: 0 20rpx;
}

.historyContent {
  display: flex;
  flex-wrap: wrap;
}

.historyItem {
  height: 50rpx;
  font-size: 26rpx;
  background: #ededed;
  margin-left: 20rpx;
  padding: 0 30rpx;
  border-radius: 20rpx;
  margin-top: 10rpx;
}

.history .delete {
  position: absolute;
  top: 0;
  right: 20rpx;
  font-size: 36rpx;
}

/* 搜索类型 */
.searchType {
  position: relative;
  display: flex;
  width: 100%;
  height: 90rpx;
  background-color: #d43c33;
}

/* 搜索类型被切换盒子跟着左移字体发生变化 */
.selectBox {
  position: absolute;
  height: 16rpx;
  border-radius: 8rpx;
  width: 70rpx;
  background-color: rgba(255, 255, 255, 0.6);
  top: 55%;
  left: 12%;
  transition: left 0.2s
}

.selectedType {
  color: white !important;
}

.searchTypeItem {
  text-align: center;
  width: 33.3%;
  font-size: 28rpx;
  color:rgba(255, 255, 255, 0.5);
  margin:24rpx 0 25rpx;
}

/* swiper */
.searchResultType {
  height: calc(100vh - 172rpx);
}

/* 歌曲搜索结果列表 */
.resultList {
  display: flex;
  flex-direction: column;
  padding:0 30rpx;
  box-sizing: border-box;
  height: calc(100vh - 172rpx);
}

.resultListItem {
  margin: 30rpx 0 40rpx;
}

.resultMusicName {
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.resultMusicInfo {
  display: flex;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.author {
  color: rgb(53, 112, 136);
}

.fenge {
  margin: 0 7rpx;
}

.album {
  color: rgb(134, 134, 134);    
}

/* 歌单搜索结果列表 */
.musicListItem{
  display: flex;
  align-items: center;
  margin: 20rpx;
}

.listAvatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 15rpx;
}

.listInfo {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  overflow: hidden;
}

.listName {
  font-size: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.listDetail {
  font-size: 24rpx;
  color: rgb(138, 138, 138);
}

/* 视频搜索结果列表 */
.videoListItem {
  border-bottom: 1px solid #ddd;
  padding-bottom: 30rpx;
}

.videoInfoContent {
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.videoCover {
  border-radius: 20rpx;
  width: 100%;
  height: 400rpx;
}

/* 数据初始加载组件 */
.loadingContainer {
  width: 100%;
  text-align: center;
  margin-top: 80rpx;
}

/* 数据上拉触底加载组件 */
.resultLoadingContainer {
  width: 100%;
  text-align: center;
  margin: 80rpx 0 130rpx;
}

/* 没有更多数据时则隐藏上拉触底加载组件 */
.hideLoading {
  display: none;
}
